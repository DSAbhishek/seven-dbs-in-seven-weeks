# create a test row:
put 'wiki', 'Home2', 'text:', 'new text'
put 'wiki', 'Home2', 'revision:author', 'eyal'
get 'wiki', 'Home2'

# delete individual column from row
delete 'wiki','Home2','revision:author'

# delete entire row, use deleteall 't1','r1'
deleteall 'wiki','Home2'

